{% extends 'baseAdmin.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/contacte/contacteIndex.css') }}">
{% endblock %}

{% block main %}
    <h1>Liste formulaire de contact</h1>
    <div class="contacte">
    {% for contacte in contactes %}
    <article class="contacte-affichage">
        <div class="contacte-affichage__items">
            <h2>Nom</h2>
            <div class="contacte-affichage__items__name">
                <p>{{ contacte.email }}</p>
            </div>
        </div>
        <div class="contacte-affichage__items">
            <h2>demande</h2>
            <div class="contacte-affichage__items__description">
                <p>{{ contacte.demande }}</p>
            </div>
        </div>
        <div class="contacte-affichage__items__btn">
            {{ include('contacte/_delete_form.html.twig') }}
        </div>
    </article>
    {% else %}
    <article>
        <span>Aucune demande de contacte</span>
    </article>
    {% endfor %}
    </div>
{% endblock %}
{% block footer %}
    {% for page in 1..totalPages %}
        {% if page == currentPage %}
            <span class="page-courante">{{ page }}</span>
        {% else %}
            <a class="page-non-courante" href="{{ path('app_contacte_index', {'page': page}) }}">{{ page }}</a>
        {% endif %}
    {% endfor %}
{% endblock %}
