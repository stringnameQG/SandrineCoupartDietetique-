{% extends 'baseAdmin.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/diet/dietIndex.css') }}">
{% endblock %}

{% block header %}
<a class="btn-new" href="{{ path('app_diet_new') }}">Nouvelle Diet</a>
{% endblock %}
{% block main %}
    <h1>Liste diet</h1>
    <div class="diet">
    {% for diet in diets %}
    <article class="diet-affichage">
        <div class="diet-affichage__items">
            <h2>Nom</h2>
            <div class="diet-affichage__items__name">
                <p>{{ diet.name }}</p>
            </div>
        </div>
        <div class="diet-affichage__items">
            <h2>Description</h2>
            <div class="diet-affichage__items__description">
                <p>{{ diet.description }}</p>
            </div>
        </div>
        <div class="diet-affichage__items__btn">
            {{ include('diet/_delete_form.html.twig') }}
            <a class="btn-modifier" href="{{ path('app_diet_edit', {'id': diet.id}) }}">MODIFIER</a>
        </div>
    </article>
    {% else %}
    <article>
        <span>Aucun utilisateur charg√©</span>
    </article>
    {% endfor %}
    </div>
{% endblock %}
{% block footer %}
    {% for page in 1..totalPages %}
        {% if page == currentPage %}
            <span class="page-courante">{{ page }}</span>
        {% else %}
            <a class="page-non-courante" href="{{ path('app_diet_index', {'page': page}) }}">{{ page }}</a>
        {% endif %}
    {% endfor %}
{% endblock %}